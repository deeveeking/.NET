@model User
@{
    ViewData["Title"] = "Сеть автозаправок Форсаж";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width = divice - width" />
    <title>Сеть автозаправок Форсаж</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <link rel="stylesheet" href="~/css/MainPage.css">

</head>


<body>


    <header>
        <div class="header-container">
            <div class="logo">
                <a asp-action="Index">
                    <img src="~/img/Logo.jpg" alt="logo">
                </a>
            </div>

            <nav role="navigation">
                <ul class="mainmenu">
                    <li><a asp-action="Stocks">Акции</a></li>
                    <li><a asp-action="Vacancies">Вакансии</a></li>
                    <li><a asp-action="Contacts">Контакты</a></li>
                    <li><a asp-action="AboutUs">О Нас</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (@User.Identity.Name == "admin@mail.ru")
                        {
                            <li><a asp-action="ProfileAdmin" asp-controller="Admin">@User.Identity.Name</a></li>
                        }
                        else
                        {
                            <li><a asp-action="Profile" asp-controller="Account">@User.Identity.Name</a></li>
                        }

                        <li><a asp-action="LogOut" asp-controller=Account>Выход</a></li>
                    }
                    else
                    {
                        <li><a asp-action="Login" asp-controller="Account">Вход</a></li>
                    }

                </ul>
            </nav>

        </div>

    </header>


    <main>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/img/Top.jpg" alt="Slide1">
                </div>
                <div class="item">
                    <img src="~/img/Top2.jpg" alt="Slide2">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <section class="Fuel">
            <div class="specialize-container">
                <h3>ВЫБИРАЙ ЛУЧШЕЕ</h3>
                <p> На сайте показаны средние цены на топливо в Украине, фактическая цена зависит от региона</p>
                <div class="fuel-card">
                    <div class="cardfuel">
                        <div class="topcard">
                            <a asp-action="Buy95"><img src="~/img/95euro.jpg" alt="95euro"></a>
                            <a asp-action="Buy92"><img src="~/img/92euro.jpg" alt="92euro"></a>
                            <a asp-action="BuyDp"><img src="~/img/dpeuro.jpg" alt="dpeuro"></a>
                            <a asp-action="BuyGas"><img src="~/img/gas.jpg" alt="gas"></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>



        <section class="news">
            <div class="specialize-container-news">
                <h3>НОВОСТИ</h3>
                <p>Последние новости из жизни АЗС «Форсаж»</p>

                <div class="news-card">
                    <div class="cardnews">
                        <div class="news-img">
                            <a asp-action="News1"><img src="~/img/news1icon.jpg" alt="news"></a>
                        </div>
                        <div class="text">
                            <p>
                                Завершены работы <br> по обустройству АЗС в г.Харьков
                            </p>
                        </div>
                    </div>
                    <div class="cardnews">
                        <div class="news-img">
                            <a asp-action="News2"><img src="~/img/news2icon.jpg" alt="news"></a>
                        </div>
                        <div class="text">
                            <p>
                                АЗС Форсаж в <br> программе «Качество под контролем»
                            </p>
                        </div>
                    </div>
                    <div class="cardnews">
                        <div class="news-img">
                            <a asp-action="News3"><img src="~/img/news3icon.jpg" alt="news"></a>
                        </div>
                        <div class="text">
                            <p>
                                На 10 АЗС открыта продажа <br> сопутствующих товаров
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </section>


    </main>

    <footer class="footer text-center">
        <div class="container">
            <a href="https://www.facebook.com/Microsoft/">
                <i class="fa fa-facebook"></i>
            </a>
            <a href="https://twitter.com/microsoft">
                <i class="fa fa-twitter"></i>
            </a>
            <a href="https://www.youtube.com/microsoft">
                <i class="fa fa-youtube"></i>
            </a>
        </div>
        <div class="footer-coppyright">
            Andrew Chernenko
        </div>
    </footer>



</body>



</html>