@model TeslLoginWithCoockie.ViewModels.RegisterModel

    <head>

        <meta charset="UTF-8">

        <title>Регистрация</title>
        <link rel="stylesheet" href="~/css/RegAndLogin.css">
    </head>


    <div id="form">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />

            <p>
                <input type="text" placeholder="Email" asp-for="Email" />
                <span asp-validation-for="Email" />
            </p>

            <p>
                <input type="text" placeholder="Name" asp-for="Name" />
                <span asp-validation-for="Name" />
            </p>

            <p>
                <input type="text" placeholder="Surname" asp-for="Surname" />
                <span asp-validation-for="Surname" />
            </p>

            <p>
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" />
            </p>

            <p>
                <input asp-for="ConfirmPassword" placeholder="ConfrimPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </p>

            <p>
                <input type="submit" value="РЕГИСТРАЦИЯ" />
            </p>
        </form>
    </div>


